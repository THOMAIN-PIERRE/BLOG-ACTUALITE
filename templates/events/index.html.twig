          <p>{{ event.description }}</p>
          <a class="btn btn-primary mt-2" href="{{ path('event_show', {'id': event.id}) }}"><i class="fas fa-eye"></i><b> Plus de détails</b></a>

          {% if is_granted('ROLE_ADMIN') %}
              <a class="btn btn-warning mt-2 text-dark " href="{{ path('admin_event_edit', {'id': event.id}) }}"><i class="fas fa-edit"></i><b> Modifier l'évènement</b></a>   
