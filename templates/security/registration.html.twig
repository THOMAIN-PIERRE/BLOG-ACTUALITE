{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}


{% block body %}

<div class="container mb-5">
    <h1 class="my-5 text-center">INSCRIPTION</h1>

    {{form_start(form)}}
    

    <div class="row">
        <div class="col">
            <div class="alert alert-dark">
                
            {{form_row(form.username, {'label': 'Nom d\'utilisateur * (Il s\'agit du nom qui vous identifiera auprès des autres utilisateurs)', 'attr': {'placeholder': 'Entrez votre nom d\'utilisateur'}})}}
            {{form_row(form.email, {'label': 'Adresse email *', 'attr': {'placeholder': 'Entrez votre adresse email'}})}}
            {{form_row(form.password, {'label': 'Mot de passe *', 'attr': {'placeholder': 'Entrez votre mot de passe'}})}}
            {{form_row(form.confirm_password, {'label': 'Confirmation du mot de passe *', 'attr': {'placeholder': 'Saisissez à nouveau votre mot de passe'}})}}
            {{form_row(form.avatar, {'label': 'Avatar', 'attr': {'placeholder': 'Saisissez l\'URL de votre avatar'}})}}
            {{form_row(form.rgpd, {'label': 'J\'accepte les Conditions Générales d\'Utilisation et la Politique de confidentialité qui m\'informe des modalités de traitement de mes données personnelles ainsi que de mes droits sur ces données.'})}}  

            <div class="mt-1 mb-2">
                <button type="submit"><a href="" class="btn btn-primary text-light"><strong>Conditions générales d'utilisation</strong></a></button>
                <button type="submit"><a href="" class="btn btn-primary text-light"><strong>Politique de confidentialité</strong></a></button>
                <p class="mt-3">* : champs requis</p>
            </div>
            </div>
            <div class="alert alert-dark">
                <p>Cliquez pour nous rejoindre !</p>
                <button type="submit" class="btn btn-success"><i class="fas fa-check"></i><b> Je m'inscris !</b></button>

            </div>
        </div>
    </div>

    {{form_end(form)}}
</div>
{% endblock %}