{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

	<div class="container">

		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<div class="alert alert-secondary mt-5 mb-5 py-3 px-3">
					<h1 class="text-center mt-3">Connexion</h1>
					<hr style="border: 1px solid blue;" class="mt-4">
					<h3 class="mt-4 mb-4">Saisissez vos identifiants de connexion !</h3>

					{% if hasError %}
						<div class="alert bg-danger text-light">Oups, les identifiants saisis sont invalides !</div>
					{% endif %}

					<form action="{{ path('security_login') }}" method="post">
						<div class="form-group">
							<label for="email">Email</label>
							<input type="text" name="_username" id="email" class="form-control" placeholder="Adresse email" value="{{ last_username }}" required autofocus>
						</div>
						<div class="form-group">
							<label for="password">Mot de passe</label>
							<input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
						</div>
						<div class="form-group mt-4 mb-5">
							<button type="submit" class="btn btn-success"><i class="fas fa-check"></i><b>Connexion</b></button>
							<h5 class="mt-4"><u><b>Pas encore membre ?</b></u></h5>
							<h6><a href="{{path('security_registration')}}"><b>Cr√©ez un compte pour consulter nos articles et commenter !</b></a></h6>
						</div>
					</form>
				</div>
			</div>
		</div>

	</div>

{% endblock %}
