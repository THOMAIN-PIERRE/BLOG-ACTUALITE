                                <td class="text-center align-middle">
                                {{ users.Postarticles | length }}</td>
                                <td class="text-center align-middle">
                                {{ users.commentaires | length }}</td> #}
                                <td class="text-center align-middle">
                                    <a href="{{ path('admin_role_edit', {'id': role.id}) }}" class="btn btn-success mr-2 mb-2"><i class="fas fa-edit" aria-hidden="true"></i></a>
                                    <a href="{{ path('admin_role_delete', {'id': role.id}) }}" class="btn btn-danger mr-2 mb-2"><i class="fa fa-trash" aria-hidden="true"></i></a>
